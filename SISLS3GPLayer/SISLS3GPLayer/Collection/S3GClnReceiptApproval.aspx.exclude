                </HeaderTemplate>
                <ContentTemplate>
                    <table width="100%">
                        <tr>
                            <td style="width: 50%; height: 40%;" align="left" valign="top" valign="top">
                                <asp:Panel ID="pnlReceiptInfo" GroupingText="Receipt Information" runat="server"
